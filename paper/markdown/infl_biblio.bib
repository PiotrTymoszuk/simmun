number = {2},
pages = {69--77},
pmid = {11832252},
publisher = {J Psychosom Res},
title = {{The validity of the Hospital Anxiety and Depression Scale: An updated literature review}},
url = {https://pubmed.ncbi.nlm.nih.gov/11832252/},
volume = {52},
year = {2002}
}
