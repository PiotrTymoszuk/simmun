issn = {0197-0186},
journal = {Neurochemistry International},
keywords = {3-Hydroxy-anthranilic acid,3-OH-anthranilate,HPLC,Metabolites,Nicotinamide,Psychosis,Suicide,Tryptophan},
month = {may},
number = {6},
pages = {1297--1303},
